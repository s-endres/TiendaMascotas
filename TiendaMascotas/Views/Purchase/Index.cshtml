<h2>Purchase</h2>

<script>

    $(document).ready(function () {
        $table = $("#myDT").DataTable({
            responsive: true,
            "columns": [
                { "data": "Id" },
                { "data": "Name" },
                { "data": "Code" },
                { "data": "Price" },
                {
                    "defaultContent": "<button type=\"button\"  data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button> "
                }
            ],
            "columnDefs": [{
                "targets": [2],
                "orderable": false
            }]
        });

        $("#myModal").on('hidden.bs.modal', function () {
            $("#HiddenIndexDelete").val("");
            $("#indexId").val("");
            $("#modalName").val("");
            $("#Add").css("display", "inline");
            $("#HiddenId").css("display", "none");
            $("#myModal p[Class='alert alert-danger']").remove();
        });


        $("#DeleteModal").on('hidden.bs.modal', function () {
            $("#DeleteModal p[Class='alert alert-danger']").remove();
            $("#titleModelDelete").text("Delete");
        });


        $("#yesDelete").click(function () {
            $table.row($("#indexId").val()).remove().draw();
            $("#closeDeleteModal").click();
        });

    });

    function AddProduct() {
        if (validateMyModal()) {
            if (GetProductByCode() != null && ProductExistInPurchase(GetProductByCode().Code) === false) {
                $table.row.add(GetProductByCode()).draw();
                $("#closeMyModal").click();
            }
            else {
                ValidateMyAlert("Class='alert alert-danger'", 'The code does not exist or exist in purchase list', 'Warning', "#myModal");
            }
        }
    }

    function removeRow(button) {
        var actualRow = $(button).parents("tr");
        var rowIndex = $table.row(actualRow).index();
        var row = $table.row(rowIndex).data();
        $("#indexId").val(rowIndex);
    }

    function GetProductByCode() {
        var existingProduct = false;
        var obj = { Id:"",Name:"",Code: "", Price: "" };
        $.ajaxSetup({ async: false });
        $.ajax({
            type: "GET",
            url: "http://localhost:58176/Product/getAllProducts",
            data: "",
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $.each(data, function () {
                    if (this.Code == $("#modalName").val()) {
                        obj.Id = this.Id
                        obj.Name = this.Name
                        obj.Code = this.Code;
                        obj.Price = this.Price;
                        existingProduct = true;                   
                    }
                });
            }
        });
        if (existingProduct == true) {
            return obj;
        }
        else { return null; }
    }

    function ProductExistInPurchase(code) {
        var ProductInPurchase = false;
        console.log($("#myDT").DataTable().rows());
        $.each($table.rows(), function () {
            console.log(this);
            if (this.Code === code)
            {
                ProductInPurchase = true;
            }
        });
        return ProductInPurchase;
    }

    //Validations
    function ValidateMyAlert(pClass, pString, tMessege, insertSide) {
        if (!$("p[" + pClass + "]").length) {
            $(insertSide).prepend("<p " + pClass + "><strong>" + tMessege + "</strong> " + pString + " </p>");
        }
        else {
            $("p[" + pClass + "]").remove();
            $(insertSide).prepend("<p " + pClass + "><strong>" + tMessege + "</strong> " + pString + " </p>");
        }
    }

    function validateMyModal() {
        var cellEmty = true;
        if ($("#modalName").val().trim()==="") {
            changeClass($("#modalName").parent(), "has-error", "has-success");
            cellEmty = false;
        }
        else { changeClass($("#modalName").parent(), "has-success", "has-error"); }
        return cellEmty;
    }

    function changeClass(input, classRemove, classAdd) {
        input.removeClass(classRemove);
        input.addClass(classAdd);
    }

</script>


<div id="alertContainer"> </div>

<div class="panel-heading">
    Add Product to purchase |
    <button type="button" class="glyphicon glyphicon-plus" data-toggle="modal" data-target="#myModal"></button>
</div>
<table id="myDT" class="table">
    <thead>
        <tr>
            <th>
                <label>Product Id</label>
            </th>
            <th>
                <label>Product Name</label>
            </th>
            <th>
                <label>Product Code</label>
            </th>
            <th>
                <label>Price</label>
            </th>
            <th>
                <label>Buttons</label>
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="titleModel">Enter the product code to buy</h4>
            </div>

            <div class="modal-body">
                <label>Code:</label><br>
                <input type="text" class="form-control" id="modalName"> </input><br>
                <input type="text" class="form-control" style="display:none" id="indexId"> </input><br>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="closeMyModal">Close</button>
                    <button type="button" class="btn btn-default" id="Add" onclick="AddProduct()">Add</button>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="titleModelDelete">Delete</h4>
            </div>
            <div id="rowModalBody" class="modal-body">
                <label for="usr">Are you sure you want to delete this Category</label><br>
                <button type="button" class="btn btn-default" id="yesDelete">yes</button>
                <button type="button" class="btn btn-default" id="noDelete" data-dismiss="modal">No</button>
                <input type="text" class="HiddenIndexx" id="HiddenIndexDelete" style="display:none"> </input>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="closeDeleteModal">Close</button>
            </div>
        </div>
    </div>
</div>
