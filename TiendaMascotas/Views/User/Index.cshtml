<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="titleModel">Add new Row to table</h4>
            </div>

            <div class="modal-body">

                <div style="display:none" id="HiddenId">
                    <label for="qwe"> Id</label><br>
                    <input type="text" class=" form-control HiddenIndexx" id="UserId" disabled> </input><br>
                </div>
                <label>Name:</label><br>
                <input type="text" class="form-control" id="modalName"> </input><br>
                <label>LastName:</label><br>
                <input type="text" class="form-control" id="modalLastName"> </input><br>
                <label>Mail:</label><br>
                <input type="text" class="form-control" id="modalMail"> </input><br>
                <label>Phone:</label><br>
                <input type="number" id="ModalPhone"  maxlength="40" class="form-control"></input><br>
                <label>UserTYpe:</label><br>
                <select id="selectUserType" class="form-control">
                </select>
                <input type="text" class="form-control" style="display:none" id="indexId"> </input><br>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="closeMyModal">Close</button>
                    <button type="button" class="btn btn-default" id="Add" onclick="AddUser()">Add</button>
                    <button type="button" class="btn btn-default" id="edit" onclick="editUserBotton()" style="display:none">Edit</button>
                </div>

            </div>
        </div>
    </div>
</div>

