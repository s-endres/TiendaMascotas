<h2>Users</h2>

<script>

    $(document).ready(function () {

        

        $("#myModal").on('hidden.bs.modal', function () {
            $("#HiddenIndexDelete").val("");
            $("#indexId").val("");
            $("#modalName").val("");
            $("#modalLastName").val("");
            $("#modalMail").val("");
            $("#ModalPhone").val("");
            $("#Add").css("display", "inline");
            $("#edit").css("display", "none");
            $("#HiddenId").css("display", "none");
            $("#titleModel").text("Add new Row to table");
            $(".HiddenIndex, input[type='date]'").removeClass("Error");
            $("#myModal p[Class='alert alert-danger']").remove();
        });

        $("#yesDelete").click(function () {
            $.ajax({
                type: "DELETE",
                url: "http://localhost:58176/User/RemoveUser",
                data: JSON.stringify({ UserId: $("#HiddenIndexDelete").val()}),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        $table.row($("#indexId").val()).remove().draw();
                    }
                    else {
                        Console.log("data is false");
                    }
                },
                error: function () {
                    Alert("Error");
                }
            });
            $("#closeDeleteModal").click();
        });


        $.ajaxSetup({ async: false });
        $.ajax({
            type: "GET",
            url: "http://localhost:58176/User/GetAllUsers",
            data: "",
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                var Data = [];
                $.each(data, function () {
                    var obj = {
                        Id: this.Id,
                        Name: this.Name,
                        LastName: this.LastName,
                        Mail: this.Mail,
                        PhoneNumber: this.PhoneNumber,
                        IdUserType: getUserType(this.IdUserType)
                    }
                    Data.push(obj);
                })
                //<!--DataTables  Initialization -- >
                $table = $("#myDT").DataTable({
                    responsive: true,
                    "data": Data,
                    "columns": [
                        { "data": "Id" },
                        { "data": "Name" },
                        { "data": "LastName" },
                        { "data": "Mail" },
                        { "data": "PhoneNumber" },
                        { "data": "IdUserType" },
                        {
                            "defaultContent": "<button type=\"button\"  data-toggle='modal' data-target='#DeleteModal' class=\"glyphicon glyphicon-trash\" onclick = \"removeRow(this)\"></button> " +
                            "<button type=\"button\" data-toggle=\"modal\" data-target=\"#myModal\" onclick =\"editRow(this)\" class = \"glyphicon glyphicon-pencil\">"
                        }
                    ],
                    "columnDefs": [{
                        "targets": [6],
                        "orderable": false
                    }]
                });
            },
            error: function () {
                ValidateMyAlert("Class='alert alert-danger'", 'error', 'Danger', "#alertContainer");
            }
        });

        $.ajax({
            type: "GET",
            url: "http://localhost:58176/UserType/GetAllUserType",
            data: "",
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $.each(data, function () {
                    $("#selectUserType").append("<option value=" + this.Id + ">" + this.Name + "</option>");
                });
            }
        });

    });

    function AddUser() {
        $.ajaxSetup({ async: false });
        $.ajax({
            type: "POST",
            url: "http://localhost:58176/User/AddUser",
            data: JSON.stringify({
                Name: $("#modalName").val(),
                LastName: $("#modalLastName").val(),
                Mail: $("#modalMail").val(),
                PhoneNumber: $("#ModalPhone").val(),
                IdUserType: $("#selectUserType").val()
            }),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data) {
                    var obj = {
                        Id: data.Id,
                        Name: data.Name,
                        LastName: data.LastName,
                        Mail: data.Mail,
                        PhoneNumber: data.PhoneNumber,
                        IdUserType: getUserType(data.IdUserType)
                    }
                    $table.row.add(obj).draw();
                    $("#closeMyModal").click();
                }
            }
        });
    }

    function removeRow(button) {
        var actualRow = $(button).parents("tr");
        var rowIndex = $table.row(actualRow).index();
        var row = $table.row(rowIndex).data();
        $("#HiddenIndexDelete").val(row.Id);
        $("#indexId").val(rowIndex);
    }


    function editRow(button) {
        $("#Add").css("display", "none");
        $("#edit").css("display", "inline");
        $("#HiddenId").css("display", "inline");
        $("#titleModel").text("Edit Row");
        var ActualRow = $(button).parents("tr");
        var rowIndex = $table.row(ActualRow).index();
        var row = $table.row(rowIndex).data();
        $("#UserId").val(row.Id);
        $("#modalName").val(row.Name);
        $("#modalLastName").val(row.LastName);
        $("#modalMail").val(row.Mail);
        $("#ModalPhone").val(row.PhoneNumber);
        $("#selectUserType option").each(function () { this.selected = (this.text == row.IdUserType); });
        $("#indexId").val(rowIndex);
    }
    function editUserBotton() {    
        $.ajaxSetup({ async: false });
            $.ajax({
                type: "PUT",
                url: "http://localhost:58176/User/UpdateUser",
                data: JSON.stringify({
                    Id: $("#UserId").val(),
                    Name: $("#modalName").val(),
                    LastName: $("#modalLastName").val(),
                    Mail: $("#modalMail").val(),
                    PhoneNumber: $("#ModalPhone").val(),
                    IdUserType: $("#selectUserType").val()
                }),
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data) {
                        var obj = {
                            Id: data.Id,
                            Name: data.Name,
                            LastName: data.LastName,
                            Mail: data.Mail,
                            PhoneNumber: data.PhoneNumber,
                            IdUserType: getUserType(data.IdUserType)
                        };
                        $table.row($("#indexId").val()).data(obj).draw();
                        $("#closeMyModal").click();
                    }
                    else {
                        ValidateMyAlert("Class='alert alert-warning'", 'Something is wrong', 'Warning', "#alertContainer");
                    }
                }
            });
    }

    function getUserType(numType) {
        var type = "";
        $.ajax({
            type: "GET",
            url: "http://localhost:58176/UserType/GetUserTypeById",
            data: { userTypeId: numType},
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                type = data.Name;
            }
        });
        return type;
    }

</script>


